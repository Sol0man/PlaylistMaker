<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.3</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/primary_text_size_22</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">@dimen/radius</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="EditTextButtonStyle">
        <item name="tint">@color/yp_text_gray</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="SettingsBackground">
        <item name="android:background">@color/white</item>

    </style>

    <style name="TextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/primary_text_size_16</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:drawableTint">@color/yp_text_gray</item>
        <item name="android:backgroundTint">@color/yp_light_gray</item>
        <item name="android:textColorHint">@color/yp_text_gray</item>
    </style>

    <style name="track_style_1">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="track_style_2">
        <item name="android:drawableTint">@color/yp_text_gray</item>
        <item name="android:textColor">@color/yp_text_gray</item>
        <item name="tint">@color/yp_text_gray</item>
    </style>

    <style name="MessageError">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="ButtonUpdate">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/yp_black</item>
    </style>

    <style name="SettingsTitle">
        <item name="android:textColor">@color/yp_black</item>
        <item name="tint">@color/yp_black</item>
    </style>

    <style name="SettingsTextColor">
        <item name="android:textColor">@color/yp_black</item>
        <item name="drawableTint">@color/yp_text_gray</item>
    </style>

    <style name="SwitchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/primary_text_size_16</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorControlActivated">@color/yp_text_gray</item>
    </style>
    
    <style name="you_were_looking_for_title_style">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_style_for_player_activity">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="player_button">
        <item name="android:backgroundTint">@color/gray_button_light_mode</item>
    </style>

    <style name="button_play">
        <item name="tint">@color/black</item>
    </style>

    <style name="SwitchButton">
        <item name="thumbTint">@color/yp_text_gray</item>
        <item name="trackTint">@color/yp_light_gray</item>
    </style>
    
    <style name="Title">
        <item name="android:textSize">@dimen/primary_text_size_22</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tab_item_style_1">
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="toolbar_style">
        <item name="android:textSize">@dimen/primary_text_size_26</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_appearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/primary_text_size_16</item>
    </style>

    <style name="bottom_panel">
        <item name="itemTextColor">@color/bottom_nav_color_light</item>
        <item name="itemIconTint">@color/bottom_nav_color_light</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="new_playlist_text_input_layout_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">16sp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <style name="bottom_sheet_player"
        parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <style name="playlist_title_style">
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="bottom_sheet_title_style">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="bottom_sheet_title_style2">
        <item name="android:textColor">@color/yp_text_gray</item>
    </style>

    <style name="playlist_create_album_image">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="bottom_sheet_style">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="bottom_sheet_view_style">
        <item name="android:backgroundTint">@color/yp_text_gray</item>
    </style>

</resources>